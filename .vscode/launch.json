    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run single file",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["./tests/test_structure/module_a/__init__.py",]
        },
        {
            "name": "Python Debugger: Run all files in tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["tests"]
        },
        {
            "name": "Python Debugger: Run all files in module_b",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["tests/test_structure/module_b"]
        }
    ]
}